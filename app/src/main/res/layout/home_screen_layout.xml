<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.appcompat.widget.SearchView
        android:layout_width="327dp"
        android:layout_height="50dp"
        android:id="@+id/home_screen_search_bar"
        android:layout_centerHorizontal="true"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/home_screen_search_bar"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="5"
            android:layout_gravity="center_horizontal">
            <ImageView
                android:layout_width="64dp"
                android:layout_height="98dp"
                android:src="@drawable/home_all_categories"
                android:id="@+id/home_screen_all_categories"
                android:layout_weight="1"
                />
            <ImageView
                android:layout_width="64dp"
                android:layout_height="98dp"
                android:src="@drawable/home_screen_welness"
                android:id="@+id/home_screen_welness"
                android:layout_weight="1"
                />
                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="98dp"
                    android:src="@drawable/home_screen_homeo"
                    android:id="@+id/home_screen_homeo"
                    android:layout_weight="1"
                    />


            <ImageView
                android:layout_width="64dp"
                android:layout_height="98dp"
                android:src="@drawable/home_screen_eye_care"
                android:id="@+id/home_screen_eye_care"
                android:layout_weight="1"/>
            <ImageView
                android:layout_width="64dp"
                android:layout_height="98dp"
                android:src="@drawable/home_screen_skin_and_care"
                android:id="@+id/home_screen_skin_and_hair"
                android:layout_weight="1"/>
        </LinearLayout>
            <ImageView
                android:layout_width="334dp"
                android:layout_height="139dp"
                android:layout_gravity="center"
                android:src="@drawable/deal_of_the_day"
                android:layout_margin="20dp"
                android:id="@+id/home_screen_deal_of_the_day"/>
        </LinearLayout>

    </ScrollView>


</RelativeLayout>