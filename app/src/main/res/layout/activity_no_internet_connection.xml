<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NoInternetConnectionActivity">
    <ImageView
        android:layout_width="143dp"
        android:layout_height="126dp"
        android:layout_centerInParent="true"
        android:src="@drawable/no_internet_connection_image"
        android:id="@+id/no_internet_connection_image"/>
    <TextView
        android:layout_width="161dp"
        android:layout_height="25dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/no_internet_connection_image"
        android:text="No Internet Connection"
        android:gravity="center"
        android:id="@+id/no_internet_connection_text"/>
    <TextView
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:layout_below="@id/no_internet_connection_text"
        android:id="@+id/no_internet_connection_try_again"
        android:layout_centerHorizontal="true"
        android:text="Try Agian"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:textColor="#1987FB"/>

</RelativeLayout>